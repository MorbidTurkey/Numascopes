# Environment Variables for Horoscope Application
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///horoscope.db

# OpenAI API Configuration (Required for AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (Optional - for email notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Security Settings
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
WTF_CSRF_ENABLED=true

# Astrology Configuration
# Swiss Ephemeris data path (optional - for advanced calculations)
EPHEMERIS_PATH=./ephemeris

# Application Settings
DEFAULT_TIMEZONE=UTC-5
MAX_HOROSCOPE_HISTORY=100
DAILY_HOROSCOPE_TIME=06:00

# External API Keys (Optional)
# For geocoding services (to convert city names to coordinates)
GEOCODING_API_KEY=your-geocoding-api-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log